<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exerciseCardviewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="6dp"

        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/exerciseImageViewId"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/exercise_one"/>

            <TextView
                android:id="@+id/exerciseNameTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finger Spread"
                android:textColor="#000"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/exerciseImageViewId"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/exerciseDurationTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00 minute"
                android:textColor="#000"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/exerciseDescriptionTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="move your bla bla bla"
                android:layout_below="@+id/exerciseNameTextViewId"
                android:layout_toEndOf="@+id/exerciseImageViewId"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>